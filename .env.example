# Application
APP_NAME=Spotik
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

# Database
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=spotik
DB_USERNAME=spotik_user
DB_PASSWORD=spotik_password

# Redis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Broadcasting
BROADCAST_DRIVER=redis
PUSHER_APP_ID=spotik
PUSHER_APP_KEY=spotik-key
PUSHER_APP_SECRET=spotik-secret
PUSHER_HOST=127.0.0.1
PUSHER_PORT=6001
