# Track test environment configuration
APP_NAME=Spotik
APP_ENV=test
APP_DEBUG=true
APP_URL=http://localhost:3001

# Server Configuration
SERVER_HOST=localhost
SERVER_PORT=3001
SERVER_THREADS=1
SERVER_WORKERS=1

# Database (not used in basic tests)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=spotik_test
DB_USER=test_user
DB_PASSWORD=test_password

# JWT Configuration
JWT_SECRET=test_secret_key_for_testing_only
JWT_TTL=60

# File Storage
AUDIO_STORAGE_PATH=./storage/tracks
PUBLIC_STORAGE_PATH=./storage/public

# Logging
LOG_LEVEL=info
LOG_FILE=logs/track_test.log

# Disable performance monitoring in tests
ENABLE_PERFORMANCE_MONITORING=false
HEALTH_CHECK_ENABLED=true