# Ruby Backend Environment Configuration Example
# Copy this file to .env and configure for your environment

# Application
APP_NAME=Spotik
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:3000

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=3000
SERVER_THREADS=4
SERVER_WORKERS=2

# Database (PostgreSQL - same as Laravel backend)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=spotik
DB_USER=spotik_user
DB_PASSWORD=spotik_password

# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_TIMEOUT=5

# JWT Configuration (must match Laravel backend)
JWT_SECRET=your_jwt_secret_here
JWT_TTL=1440

# File Storage (paths relative to Laravel backend storage)
AUDIO_STORAGE_PATH=../backend/storage/app/audio
PUBLIC_STORAGE_PATH=../backend/storage/app/public

# WebSocket Configuration
WS_PING_INTERVAL=30
WS_ACTIVITY_TIMEOUT=120

# Logging
LOG_LEVEL=info
LOG_FILE=logs/spotik.log

# Performance Settings
ENABLE_PERFORMANCE_MONITORING=true
SLOW_QUERY_THRESHOLD=1000
SLOW_REQUEST_THRESHOLD=2000

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_ENDPOINT=/health