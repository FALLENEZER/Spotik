{
  "name": "spotik-frontend",
  "version": "1.0.0",
  "description": "Spotik collaborative music streaming frontend",
  "type": "module",
  "scripts": {
    "dev": "vite --host 0.0.0.0 --port 3000",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "@headlessui/vue": "^1.7.0",
    "@heroicons/vue": "^2.0.0",
    "@rushstack/eslint-patch": "^1.15.0",
    "@tailwindcss/forms": "^0.5.11",
    "@vueuse/core": "^10.7.0",
    "autoprefixer": "^10.4.0",
    "axios": "^1.6.0",
    "laravel-echo": "^1.15.0",
    "pinia": "^2.1.0",
    "postcss": "^8.4.0",
    "pusher-js": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "vue": "^3.4.0",
    "vue-router": "^4.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "@vitest/coverage-v8": "^1.2.0",
    "@vitest/ui": "^1.2.0",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.0",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.19.0",
    "fast-check": "^3.15.0",
    "jsdom": "^24.0.0",
    "prettier": "^3.2.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
